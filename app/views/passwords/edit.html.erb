<% form_tag url_for(:action => "update") do %>
  <p><label for="old_password" class="block">Senha Antiga</label><br />
  <%= password_field_tag 'old_password', @old_password, :size => 45 %></p>

  <p><label for="password" class="block">Nova Senha</label><br />
    <%= password_field_tag 'password', {}, :size => 45 %><br />
  <small><%=h msg('between_and_characters') %></small></p>

  <p><label for="password_confirmation"  class="block">Confirmar Senha</label><br />
  <%= password_field_tag 'password_confirmation', {}, :size => 45 %></p>

  <%= submit_tag labels('change_password') %>

<% end %>
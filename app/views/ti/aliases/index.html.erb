<h1>Aliases - <%=h labels('filings') %></h1>

<table>
  <tr>
    <th>Endereço</th>
    <th>Para</th>
    <th>Domínio</th>
    <th colspan="3">Controle</th>
  </tr>
  <% @aliases.each do |aliass| %>
    <tr bgcolor=<%=h line_color(aliass.active) %>>
      <td><%=  h aliass.address %></td>
      <td><%=  h aliass.goto %></td>
      <td><%=  h aliass.dominio %></td>
      
      <td><%=link_to labels('show'), object_url(aliass) %></td>
      <td><%=link_to labels('edit'), edit_object_url(aliass) %></td>
      <td><%=link_to labels('destroy'), object_url(aliass), :confirm => labels('confirm_destroy'), :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @collection, options = { :prev_label => "← #{labels('previous')}", :next_label => "#{labels('next')} →"} %> <br />

<%= link_to labels('new'), new_object_url %>

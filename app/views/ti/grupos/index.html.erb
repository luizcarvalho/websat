<h1>Grupos - <%=h labels('filings') %></h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Descrição</th>
    <th colspan="3">Controle</th>
  </tr>
  <%- @grupos.each do |grupo|%>
    <tr>
      <td><%=h grupo.nome %></td>
      <td><%=h grupo.descricao %></td>
    
      <td><%=link_to labels('show'), object_url(grupo) %></td>
      <td><%=link_to labels('edit'), edit_object_url(grupo) %></td>
      <td><%=link_to labels('destroy'), object_url(grupo), :confirm => labels('confirm_destroy'), :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @collection, options = { :prev_label => "← #{labels('previous')}", :next_label => "#{labels('next')} →"} %> <br />

<%= link_to labels('new'), new_object_url %>
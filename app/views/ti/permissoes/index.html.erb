<h1>Permissões - <%=h labels('filings') %></h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Recurso</th>
    <th colspan="3">Controle</th>
  </tr>
  <%- @permissoes.each do |permissao|%>
    <tr>
      <td><%=h permissao.nome %></td>
      <td><%=h permissao.recurso %></td>
    
      <td><%=link_to labels('show'), object_url(permissao) %></td>
      <td><%=link_to labels('edit'), edit_object_url(permissao) %></td>
      <td><%=link_to labels('destroy'), object_url(permissao), :confirm => labels('confirm_destroy'), :method => :delete %></td>
    </tr>
  <% end %>
</table>

<%= will_paginate @collection, options = { :prev_label => "← #{labels('previous')}", :next_label => "#{labels('next')} →"} %> <br />

<%= link_to labels('new'), new_object_url %>

<h1>Emails - <%=h labels('filings') %></h1>

<%= render :partial => "search" %>

<table>
  <tr>
    <th>Usuário</th>
    <th>Quota</th>
    <th>Domínio</th>
    <th colspan="3">Controle</th>
  </tr>
  <%- @mailboxes.each do |mailbox|%>
    <tr bgcolor=<%=h line_color(mailbox.active) %>>
      <td><%=h mailbox.usuario %></td>
      <td><%=h mailbox.quota %></td>
      <td><%=h mailbox.dominio %></td>
    
      <td><%=link_to labels('show'), object_url(mailbox) %></td>
      
      <% if parent? %>
        <td><%=link_to labels('edit'), edit_object_url(mailbox) %></td>
        <td><%=link_to labels('destroy'), object_url(mailbox), :confirm => labels('confirm_destroy'), :method => :delete %></td>
      <% end  %>

    </tr>
  <% end %>
</table>

<%= will_paginate @collection, options = { :prev_label => "← #{labels('previous')}", :next_label => "#{labels('next')} →"} %> <br />

<%= (link_to labels('new'), new_object_url) if parent? %>

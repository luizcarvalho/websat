<% form_tag(ti_usuarios_url, :method => :get) do %>
  <ul>
    <li>
      <label for="search_login">Login:</label>
      <%= text_field_tag "search[login]", (params[:search][:login] unless params[:search].blank?), :size => 30, :id => 'search_login'  %> 
    </li>
    <li>
      <label for="search_active">Situação:</label>
      <%= select('search', 'active', [['Ativo', true], ['Inativo', false]], :selected => (params[:search].blank?) ? true : params[:search][:active]) %>
    </li>
    <li>
      <%= submit_tag 'Localizar' %>
    </li>  
  </ul>
<% end %>
<% javascript 'dynamic_url' %>

<p>
  <label for="menu_label">Label:</label><br/>
  <%= f.text_field :label %>
</p>

<p>
  <label for='controller_id'>Controller:</label>
  <%= select :controller,:id,@ctrl_options, :prompt=>"Selecione o Controller" %>
  <p id="action_field">
    <label for='menu_url'>Url:</label>
    <%= select :menu,:url,{nil=>nil}, :prompt=>"Selecione a Action" %>
  </p>
</p>

<p>
  <label for="menu_ordem">Ordem:</label>
  <%= f.text_field :ordem %>
</p>

<p>
  <label for="menu_pai">Menu Pai:</label>
  <%= f.select(:pai,@pais,:prompt => "Selecione") %>
</p>

<p>
  <%= submit_tag button_name %>
</p>

